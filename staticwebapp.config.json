{
    "routes": [
        {
            "route": "/",
            "rewrite": "/index.html",
            "allowedRoles": ["anonymous"]
        },
        {
            "route": "/auth/*",
            "rewrite": "/index.html",
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/login",
            "redirect": "/.auth/login/aad",
            "statusCode": 302
        },
        {
            "route": "/logout",
            "redirect": "/.auth/logout",
            "statusCode": 302
        }
    ],
    "responseOverrides": {
        "401": {
            "statusCode": 302,
            "redirect": "/login?post_login_redirect_uri=.referrer"
        }
    }
}