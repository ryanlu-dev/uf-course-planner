{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "postgresql",
    "options": {
      "set-session-context": false
    },
    "connection-string": "@env('DATABASE_CONNECTION_STRING')"
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/rest"
    },
    "graphql": {
      "allow-introspection": true,
      "enabled": true,
      "path": "/graphql"
    },
    "host": {
      "mode": "production",
      "cors": {
        "origins": ["http://localhost:4280", "https://ufcourseplanner.ryanlu.dev/*", "https://delightful-tree-05363c61e.5.azurestaticapps.net", "http://localhost:3000"],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "courses": {
      "source": "courses",
      "permissions": [
        {
          "actions": ["*"],
          "role": "authenticated"
        }
      ]
    },
    "user_courses": {
      "source": "user_courses",
      "permissions": [
        {
          "actions": ["*"],
          "role": "authenticated"
        }
      ]
    },
    "departments": {
      "source": "departments",
      "permissions": [
        {
          "actions": ["*"],
          "role": "authenticated"
        }
      ]
    },
    "majors": {
      "source": "majors",
      "permissions": [
        {
          "actions": ["*"],
          "role": "authenticated"
        }
      ]
    },
    "model_semester_plans": {
      "source": "model_semester_plans",
      "permissions": [
        {
          "actions": ["*"],
          "role": "authenticated"
        }
      ]
    },
    "sections": {
      "source": "sections",
      "permissions": [
        {
          "actions": ["*"],
          "role": "authenticated"
        }
      ]
    },
    "users": {
      "source": "users",
      "permissions": [
        {
          "actions": ["*"],
          "role": "anonymous"
        }
      ]
    }
  }
}
